<%- include('partials/header'); -%>

    <div class="dashboard-bg h-64 fixed w-full">
        <div class="absolute w-full h-full top-0 left-0 gradient-bg"></div>
    </div>
    <div class="px-8 relative max-w-4xl">
            
            <div class="flex flex-col justify-between min-h-screen py-5">
                <div class="flex flex-col">
                    <h1 clrass="text-xl font-bold text-gray-800">Dashboard</h1>
                    <div class="w-full">
                        <div class="rounded-lg w-full mt-6 h-auto bg-gray-900 border-b border-gray-200 px-6 py-4">
                            <div class="flex justify-between items-center">
                                <div class="flex flex-col text-gray-100">
                                    <h2 class="font-bold text-lg">Welcome To Viking</h2>
                                    <p>An Awesome Static Site CMS</p>
                                </div>
                                <div class="flex">
                                    <!-- Begin of Toggle Switch -->
                                    <div class="flex justify-center">
                                        <!-- text to the right of toggle -->

                                        
                                        <label for="toggleDebug" class="flex items-center cursor-pointer select-none mr-2">
                                            <span class="mr-2 text-gray-500 font-medium text-xs">Debug</span>
                                            <span class="relative block">
                                                <input id="toggleDebug" type="checkbox" class="hidden" data-key="debug" data-config="build" <% if (config.build.debug) { %>checked="checked"<% } %>  />
                                                <span class="toggle__line w-12 px-2 h-6 bg-gray-700 rounded-full shadow-inner block">
                                                    <span class="yes absolute right-0 text-white font-medium text-xs ml-2 mt-1 leading-tight hidden">ON</span>
                                                    <span class="no absolute right-0 text-gray-500 font-medium text-xs mr-2 mt-1 leading-tight">off</span>
                                                </span>
                                                <!-- dot -->
                                                <span class="toggle__dot absolute w-4 h-4 mt-1 bg-white rounded-full shadow inset-0 left-0 ml-1 block"></span>
                                            </span>
                                            


                                        </label>
                                    </div>
                                    <!-- End of Toggle Switch -->
                                    <div class="bg-white text-gray-800 px-5 py-2 text-sm tracking-wider font-bold rounded cursor-pointer inline-block" id="build-btn">Build</div>
                                </div>
                            </div>
                        </div>

                        <div class="rounded-lg w-full mt-6 h-auto bg-white px-6 py-4 shadow">
                            <div class="flex justify-between items-center">
                                <div class="flex flex-col text-gray-900">
                                    <h2 class="font-bold text-lg">Need Help or Have questions?</h2>
                                    <p>Visit the Github Repo Here</p>
                                </div>
                                <a>
                                    <a href="https://github.com/vikingcms/vikingcms" target="_blank" class="bg-gray-900 text-white px-5 py-2 text-sm tracking-wider font-bold rounded cursor-pointer inline-block">Github Repo</a>
                                </div>
                            </div>
                    </div>
                    
                </div>

                <div class="rounded w-full mt-5 h-auto bg-gray-200 px-6 py-4">
                    <p class="text-gray-700 font-medium text-xs">You are currently using version 0.2.0 of VikingCMS</p>
                </div>

            </div>

                
            </div>
    </div>

<%- include('partials/footer'); -%>
